	public static View makeHUDView(Context context) {
		LayoutInflater inflater = LayoutInflater.from(context);
		View layout =  inflater.inflate(R.layout.hud_layout, null);
		TextView tvHUDText = (TextView) layout.findViewById(R.id.tvHUDText);
		tvHUDText.setBackgroundColor(0x0);
		tvHUDText.setTextColor(0xff00ff00);
		tvHUDText.setLineSpacing(4.0f, 1);
		tvHUDText.setTextSize(24.0f);
		tvHUDText.setTypeface(TypefaceHelper.getFont(context, "digital_7_mono.ttf"));
		return layout;
	}

	public static void setHudView(Context context, View view) {
		WindowManager.LayoutParams params = new WindowManager.LayoutParams(
				WindowManager.LayoutParams.TYPE_SYSTEM_OVERLAY,
				WindowManager.LayoutParams.FLAG_WATCH_OUTSIDE_TOUCH,
				PixelFormat.TRANSLUCENT);
		params.gravity = Gravity.CENTER;
		WindowManager wm = (WindowManager) context.getSystemService(Context.WINDOW_SERVICE);
		wm.addView(view, params);
	}
}
